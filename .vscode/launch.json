        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All Tests",
            // "preLaunchTask": {
            //     "task": "",
            //     "type": ""
            // },
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "env": {
                "NODE_ENV": "test",
                "test": "true",
                "useFirebaseEmulator": "true",
            },
            "args": [
                "--exit",
                "-t",
                "20000",
                "--bail",
                // "--require",
