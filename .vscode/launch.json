    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeExecutable": "/Users/joeyd/.nvm/versions/node/v17.1.0/bin/node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**/*.js",
                // "assets/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "args": [
                "--verbose",
                "--hookTimeout=160000"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
            // "preLaunchTask": "ngrok",
            // "serverReadyAction": {
            //     "pattern": "debug: Port        : ([0-9]+)",
            //     "uriFormat": "http://localhost:%s/vendors?wallet=test",
            //     "action": "openExternally"
            // }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/test/integration/controllers/**/*.test.js"
            ],
            // "outFiles": [
            //     "${workspaceFolder}/test/integration/controllers/**/*.js"
            // ],
            // "sourceMaps": true,
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests (2)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require",
                "esm",
                "--require",
                "${workspaceFolder}/test/lifecycle.test.js",
                "--reporter",
                "dot",
                "--slow",
                "5000",
                "--colors",
                "${workspaceFolder}/test/integration/controllers/**/*.test.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}