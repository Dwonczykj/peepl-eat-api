{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Compound",
            "configurations": []
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**/*.js",
                // "assets/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "env": {
                "NODE_ENV": "development",
                "useFirebaseEmulator": "false",
            },
            "args": [
                "--verbose",
                "--hookTimeout=160000"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "env": {
                "NODE_ENV": "test",
                "test": "true",
                "useFirebaseEmulator": "true",
            },
            "args": [
                "--exit",
                "-t",
                "20000",
                "--bail",
                // "--require",
                // "esm",
                "--require",
                "ts-node/register",
                // "--require",
                // "--reporter",
                // "dot",
                // "--slow",
                // "5000",
                // "--timeout",
                // "999999",
                "--colors",
                "${workspaceFolder}/test/lifecycle.test.js",
                // "${workspaceFolder}/test/integration/**/*.test.js",
                "${workspaceFolder}/test/integration/controllers/**/*.test.ts",
                "${workspaceFolder}/test/integration/controllers/**/*.test.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test Current .test.(js|ts) File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "env": {
                "NODE_ENV": "test",
                "test": "true",
                "useFirebaseEmulator": "true",
            },
            "args": [
                "--exit",
                "-t",
                "99000",
                "--bail",
                // "--require",
                // "esm",
                "--require",
                "ts-node/register",
                // "--require",
                // "--reporter",
                // "dot",
                // "--slow",
                // "5000",
                "--colors",
                "${workspaceFolder}/test/lifecycle.test.js",
                "${file}",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test TS Interfaces (TS only)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "env": {
                "NODE_ENV": "test",
                "test": "true",
                "useFirebaseEmulator": "true",
            },
            "args": [
                "--exit",
                // "--require",
                // "esm",
                "--require",
                "ts-node/register",
                "NODE_ENV=test",
                // "--require",
                "${workspaceFolder}/test/lifecycle.test.js",
                // "--require",
                // "--reporter",
                // "dot",
                // "--slow",
                // "5000",
                "--colors",
                "${workspaceFolder}/test/units/**/*.test.ts",
                // "${workspaceFolder}/test/integration/controllers/**/*.test.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}
