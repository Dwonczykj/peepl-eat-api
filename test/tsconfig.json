{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "allowJs": false,
        "checkJs": false,
        "types": [
            "node"
        ]
    },
    "compileOnSave": true
}