<div id="admin-edit-delivery-partner" class="admin" v-cloak>

  <%- partial('../../partials/admin-navbar.ejs') %>

  <div class="container">

    <div class="mb-3">
      <h1>{{deliveryPartner.name}}</h1>
      <!-- <h2 class="small">{{vendor.description}}</h2> -->
    </div>
    
    <ajax-form :form-data="deliveryPartner" :syncing.sync="syncing" :form-rules="formRules" :form-errors.sync="formErrors" :cloud-error.sync="cloudError" @submitted="deliveryPartnerSubmitted" :action="(deliveryPartner.id) ?  'editDeliveryPartner' : 'createDeliveryPartner'">
      <div class="form-group">
        <label for="name">Delivery Partner Name</label>
        <input type="text" :class="{ 'is-invalid': formErrors.name }" v-model="deliveryPartner.name" class="form-control" id="name">
      </div>

      <div class="form-group">
        <label for="phoneNumber">Delivery Partner Phone Number</label>
        <input type="text" :class="{ 'is-invalid': formErrors.phoneNumber }" v-model="deliveryPartner.phoneNumber" class="form-control" id="phoneNumber" >
      </div>

      <div class="form-group">
        <label for="email">Delivery Partner Email Address</label>
        <input type="text" :class="{ 'is-invalid': formErrors.email }" v-model="deliveryPartner.email" class="form-control" id="email" >
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" v-model="deliveryPartner.status" >
          <!-- <option value="draft">Draft</option> -->
          <option value="inactive">Inactive</option>
          <option value="active">Active</option>
        </select>
      </div>

      <h2 class="h5 mt-3">Delivery Hub</h2>
      <div class="form-group">
        <label for="addressLineOne">Delivery Hub Address Line 1</label>
        <input type="text" :class="{ 'is-invalid': formErrors.addressLineOne }" 
          v-model="deliveryPartner.deliveryOriginAddress.addressLineOne"
          class="form-control" id="addressLineOne">
      
        <label for="addressLineTwo">Delivery Hub Address Line 2</label>
        <input type="text" :class="{ 'is-invalid': formErrors.addressLineTwo }" 
          v-model="deliveryPartner.deliveryOriginAddress.addressLineTwo"
          class="form-control" id="addressLineTwo">
      
        <label for="addressTownCity">Delivery Hub Address City</label>
        <input type="text" :class="{ 'is-invalid': formErrors.addressTownCity }" v-model="deliveryPartner.deliveryOriginAddress.addressTownCity"
          class="form-control" id="addressTownCity">
      
        <label for="addressZipCode">Delivery Hub Address Post Code</label>
        <input type="text" :class="{ 'is-invalid': formErrors.addressPostCode || cloudError === 'badPostalCode' }" 
          v-model="deliveryPartner.deliveryOriginAddress.addressPostCode"
          class="form-control" id="addressZipCode" oninput="this.value = this.value.toUpperCase()">
        <div v-if="cloudError === 'badPostalCode'" class="alert alert-danger mt-4" role="alert">
          Bad PostalCode
        </div>

        <label for="pickupAddressGeocoordinate">Delivery Hub Address Geocoordinate</label>
        <p>Latitude: {{deliveryPartner.deliveryOriginAddress.latitude}}, Longitude: {{deliveryPartner.deliveryOriginAddress.longitude}}</p>
        <!-- <input type="number" :class="{ 'is-invalid': formErrors.latitude }" 
          v-model="deliveryPartner.deliveryOriginAddress.latitude"
          class="form-control" id="latitude">
        <input type="number" :class="{ 'is-invalid': formErrors.longitude }"
          v-model="deliveryPartner.deliveryOriginAddress.longitude" 
          class="form-control" id="longitude"> -->
      </div>

      <ajax-button class="btn btn-peepl mt-4" type="submit" :syncing="syncing" v-bind:class="{ 'is-loading': syncing }">Save changes</ajax-button>
      <div v-if="cloudError === 'notFound'" class="alert alert-danger mt-4" role="alert">
        Delivery Partner not found.
      </div>
      <div v-else-if="cloudError" class="alert alert-danger mt-4" role="alert">
        There has been an error updating the vendor. Please try again.
      </div>
    </ajax-form>

    <!-- <ajax-form :form-data="openingHours" :syncing.sync="syncing" :form-rules="formRules" :form-errors.sync="formErrors" :cloud-error.sync="cloudError" @submitted="vendorSubmitted" :action="(vendor.id) ?  'editVendor' : 'createVendor'"></ajax-form> -->
    <fieldset v-if="deliveryPartner.id">
      <h2 class="h5 mt-3">Operating Hours</h2>
      
      <opening-hours :fulfilment-method="deliveryPartner.deliveryFulfilmentMethod"></opening-hours>
    </fieldset>
    <!-- </ajax-form> -->

  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
