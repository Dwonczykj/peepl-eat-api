<div id="waiting-list" class="admin" v-cloak>

  <%- partial('../../partials/admin-navbar.ejs') %>

  <div class="container">
    <h1 class="my-5">Waiting List</h1>

    <table class="table action-table">
      <thead>
        <tr>
          <th scope="col"><span class="sr-only">Select</span></th>
          <th scope="col">Email Address</th>
          <th scope="col">Onboarded</th>
        </tr>
      </thead>
      <tbody>
        <tr v-for="waitingListEntry in waitingListEntries">
          <td class="action-table__shrink">
            <input 
              type="checkbox" 
              v-model="waitingListEntry.onboarded" 
              @change="toggleOnboardUserEmail(waitingListEntry.email)" 
              name="email_onboarded_{account.id}">
          <td>
            {{waitingListEntry.email}}
          </td>
          <td>
            {{waitingListEntry.onboarded}}
          </td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
