<div class="my-3 p-3 p-md-4 rounded action-card">
  <details>
    <summary class="action-card__summary">
      <span class="action-card__checkbox">
        <input type="checkbox">
      </span>
      {{ vendor.products[0].name }}
    </summary>
    <div class="action-card__content">
      <div class="form-group mt-3">
        <label for="productName1">Product Name</label>
        <input type="text" class="form-control" id="productName1" required>
      </div>
      <div class="form-group">
        <label for="productDescription1">Product Description</label>
        <textarea class="form-control" id="productDescription1" required></textarea>
      </div>
      <div class="form-group">
        <label for="basePrice1">Base Price (in pence)</label>
        <input type="text" class="form-control" id="basePrice1" required>
      </div>
      <div class="form-group">
        <label for="imageUrl1">Image URL</label>
        <input type="url" class="form-control" id="imageUrl1" required>
      </div>
      <div class="form-group">
        <label for="priority1">Priority</label>
        <input type="number" class="form-control" id="priority1" required>
      </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="available1">
        <label class="form-check-label" for="available1">Is Available</label>
      </div>

      <fieldset>
        <h3 class="h6 mt-4">Options</h3>

        <!-- TODO: loop through product options -->
        <%- // partial('../partials/admin-product-option.ejs') %>
        <!-- TODO: end loop -->

        <div class="d-md-flex my-3 action-card-actions">
          <select class="form-control form-control-sm mr-3" disabled>
            <option>Delete</option>
          </select>
          <button class="btn btn-secondary btn-sm" disabled>Apply</button>
          <button class="btn btn-peepl btn-sm ml-auto">Add a new option</button>
        </div>
      </fieldset>
    </div>
  </details>
</div>
