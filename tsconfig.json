{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "lib": [
            "es2018",
            "DOM",
            "ESNext"
        ],
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "rootDir": "./"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
}